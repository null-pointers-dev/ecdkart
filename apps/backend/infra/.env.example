# Docker Environment Configuration
# Copy this file to .env and adjust values as needed

# Database Configuration
POSTGRES_DB=ecdkart
POSTGRES_USER=ecdkart
POSTGRES_PASSWORD=ecdkart_password

# Application Configuration
NODE_ENV=production
PORT=3000

# Database URL (used by the application)
DATABASE_URL=postgresql://ecdkart:ecdkart_password@db:5432/ecdkart

# For development, use:
# NODE_ENV=development
# POSTGRES_DB=ecdkart_dev
# DATABASE_URL=postgresql://ecdkart:dev_password@db:5432/ecdkart_dev
