{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"outputs": [],
			"cache": true
		},
		"format": {
			"outputs": [],
			"cache": true
		},
		"test": {
			"outputs": ["coverage/**"],
			"cache": true
		}
	}
}
